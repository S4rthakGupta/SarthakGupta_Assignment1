@model PriceQuotationApp.Models.PriceQuotation

<div class="jumbotron bg-primary text-white text-center py-5">
    <h1 class="display-4 font-weight-bold">
        <i class="fas fa-money-bill-alt"></i> Price Quotation App
    </h1>
</div>

<div class="card shadow-lg border-0">
    <div class="card-body">
        <form method="post" class="needs-validation" novalidate>
            <div class="form-group row mb-4">
                <label for="Subtotal" class="col-sm-2 col-form-label font-weight-bold">Sales Price:</label>
                <div class="col-sm-6">
                    <input type="number" step="0.01" id="Subtotal" name="Subtotal"
                           value="@Model.Subtotal" class="form-control border-dark" required />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Subtotal" class="text-danger font-weight-bold"></span>
                </div>
            </div>

            <div class="form-group row mb-4">
                <label for="DiscountPercent" class="col-sm-2 col-form-label font-weight-bold">Discount Percent:</label>
                <div class="col-sm-6">
                    <input type="number" step="0.01" id="DiscountPercent" name="DiscountPercent"
                           value="@Model.DiscountPercent" class="form-control border-dark" required />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="DiscountPercent" class="text-danger font-weight-bold"></span>
                </div>
            </div>

            <div class="mb-4">
                <p class="font-weight-bold text-secondary">Discount Amount: <span class="text-primary">@Model.DiscountAmount.ToString("C")</span></p>
                <p class="font-weight-bold text-secondary">Total: <span class="text-primary">@Model.Total.ToString("C")</span></p>
            </div>

            <div class="form-group row">
                <div class="col-sm-8 offset-sm-2 text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2 font-weight-bold">Calculate</button>
                    <a asp-action="Clear" class="btn btn-secondary px-4 py-2 font-weight-bold">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>
